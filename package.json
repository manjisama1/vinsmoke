{
  "name": "vinsmoke",
  "version": "1.0.9",
  "description": "WhatsApp bot built with Baileys",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "server": "npx pm2 start index.js --name vinsmoke --attach",
    "stop": "npx pm2 stop vinsmoke",
    "restart": "npx pm2 restart vinsmoke",
    "logs": "npx pm2 logs vinsmoke",
    "postinstall": "node -e \"try { require('sharp') } catch (e) { process.exit(1); }\" || npm install sharp@0.34.5"
  },
  "author": "manjisama",
  "license": "MIT",
  "dependencies": {
    "baileys": "^7.0.0-rc.9",
    "pm2": "^6.0.14",
    "sharp": "^0.34.5",
    "better-sqlite3": "^12.5.0",
    "axios": "^1.7.9",
    "pino": "^9.6.0",
    "jimp": "^1.6.0",
    "dotenv": "^16.4.7",
    "moment-timezone": "^0.5.47",
    "youtubei.js": "^16.0.1",
    "cheerio": "^1.1.2",
    "link-preview-js": "^3.2.0",
    "node-webpmux": "^3.2.1",
    "pg": "^8.16.3",
    "qrcode-terminal": "^0.12.0",
    "qs": "^6.14.1",
    "fluent-ffmpeg": "^2.1.3",
    "node-id3": "^0.2.9",
    "audio-decode": "^2.2.3",
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}